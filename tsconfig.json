{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "outDir": "build",
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "sourceMap": true,
        "types": ["node", "mocha"],
        "typeRoots": ["../node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "#groot/*": ["./Gateway/src/*"],
            "#gqueries/*": ["./Gateway/src/queries/*"],
            "#gcommands/*": ["./Gateway/src/commands/*"]
        }
    },
    "include": ["./**/*.ts"]
}

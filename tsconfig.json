{
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "target": "ES6",
        "strict": true,
        "module": "CommonJS",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "importHelpers": true,
        "sourceMap": true,
        "types": ["node", "mocha"],
        "outDir": "build",
        "paths": {
            "gateway/*": ["packages/gateway/src/*"],
            "mediaservice/*": ["packages/mediaservice/src/*"],
            "common/*": ["packages/common/src/*"],
            "gateway": ["packages/gateway/src"],
            "mediaservice": ["packages/mediaservice/src"],
            "common": ["packages/common/src"]
        },
    },
    "exclude": ["**/tests/**/*.ts"]
}

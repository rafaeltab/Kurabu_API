{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "build",
        "typeRoots": ["node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "#queries/*": ["src/queries/*"],
            "#root/*": ["src/*"]
        }
    },
    "references": [
        {
            "path": "../common"
        }
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "tests/**/*.ts"
    ]
}
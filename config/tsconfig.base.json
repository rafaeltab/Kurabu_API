{
    "compilerOptions": {
        "baseUrl": "../",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "target": "ES6",
        "strict": true,
        "module": "CommonJS",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "types": ["node", "mocha"],
        "outDir": "build",
        "paths": {
            "@kurabu/gateway/*": ["projects/@kurabu/gateway/src/*"],
            "@kurabu/common/*": ["projects/@kurabu/common/src/*"]
        },
    }
}

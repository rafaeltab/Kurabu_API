{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "outDir": "build",
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "sourceMap": true,
        "types": ["node", "mocha"],
        "typeRoots": ["node_modules/@types"],
        "baseUrl": "./src",
        "paths": {
            "#root/*": ["./*"],
            "#queries/*": ["./queries/*"],
            "#commands/*": ["./commands/*"]
        }
    },
    "include": ["./src/**/*.ts", "../kurabu-lib/src/Requests/KurabuServer.ts"],
    "exclude": ["./src/public/", "./tests/"]
}
